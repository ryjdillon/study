    "pie-charts": {
      "baseComponent": "pieChart",
      "instruction": "For each year, decide what your monthly payment will be during that year. Choose to pay the minimum required payment (enter $0) or choose to pay above the minimum (up to $200). When the simulation concludes, hit the ‘Submit’ button to upload your answers. \n\n Salary $80,000/year",
      "nextButtonLocation": "sidebar",
      "nextButtonText": "Submit"
    },
  "hourglass-simulation":{
      "baseComponent": "hourglass",
      "instruction": "For each year, decide what your monthly payment will be during that year. Choose to pay the minimum required payment (enter $0) or choose to pay above the minimum (up to $200). When the simulation concludes, hit the ‘Submit’ button to upload your answers.  \n\n Salary: $80,000/year",
      "instructionLocation": "sidebar",
      "nextButtonLocation": "sidebar",
      "nextButtonText": "Submit",
      "parameters": {
          "startingBalance": 30000,
          "paymentOptions": [374.86, 474.86]
      }
  },
  "debrief": {
      "type": "markdown",
      "path": "demo-mqp-study/assets/debrief.md",
      "response": []
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "consent",
      "general-prelim-questions",
      "specific-prelim-questions",
      {
        "order": "random",
        "components": [
          "pie-charts",
          "barChart_q1",
          "text-simulation"
        ],
        "numSamples": 1
      },
      "post-survey-questions",
      "financial-literacy-questions",
      "debrief"
    ]
  }
}