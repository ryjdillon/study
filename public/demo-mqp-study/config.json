{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v1.0.3/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Bar Charts with Student Loans",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2024-09-20",
    "description": "A study comparing visulizations related to student loans.",
    "organizations": [
      "WPI"
    ]
  },
  "uiConfig": {
    "contactEmail": "@wpi.edu",
    "helpTextPath": "demo-mqp-study/assets/tutorial.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true,
    "studyEndMsg": "**Thank you for completing the study. You may click this link and return to Prolific**: [https://app.prolific.com/submissions/complete?cc=C1MXB7XQ](https://app.prolific.com/submissions/complete?cc=C1MXB7XQ)",
    "urlParticipantIdParam": "PROLIFIC_PID"
  },
  "baseComponents": {
    "stackedBarChart": {
      "instruction": "Review the bar chart and answer the question.",
      "instructionLocation": "sidebar",
      "description": "A bar chart.",
      "type": "react-component",
      "path": "demo-mqp-study/assets/StackedBarChart.tsx",
      "parameters": {
        "dataset": "min-payment",
        "x": "year",
        "y": "min-payment",
        "ids": "year"
      },
      "nextButtonLocation": "belowStimulus",
      "response": [
        {
          "id": "response",
          "prompt": "Answer:",
          "required": true,
          "location": "sidebar",
          "type": "dropdown",
          "options": [
            {
              "label": "Completed",
              "value": "Completed"
            }
          ]
        }
      ]
    }
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "demo-mqp-study/assets/introduction.md",
      "nextButtonText": "Continue",
      "response": []
    },
    "consent": {
      "type": "markdown",
      "path": "demo-mqp-study/assets/consent.md",
      "nextButtonText": "Agree",
      "response": [
        {
          "id": "accept",
          "prompt": "Do you consent to the study and wish to continue?",
          "required": true,
          "requiredValue": "Accept",
          "location": "belowStimulus",
          "type": "radio",
          "options": [
            "Decline",
            "Accept"
          ]
        }
      ]
    },
    "general-prelim-questions": {
      "type": "questionnaire",
      "response": [
        {
          "id": "age",
          "prompt": "How old are you?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Under 18",
            "18-24",
            "25-34",
            "35-44",
            "45-54",
            "55-64",
            "65 or older"
          ]
        },
        {
          "id": "gender",
          "prompt": "What is your gender?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Female",
            "Male",
            "Non-binary",
            "Prefer not to say"
          ]
        },
        {
          "id": "major",
          "prompt": "What is your major?",
          "required": true,
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Please enter your major"
        },
        {
          "id": "year-in-school",
          "prompt": "What is your year in school?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Freshman",
            "Sophomore",
            "Junior",
            "Senior",
            "Graduate",
            "Post-graduate"
          ]
        }
      ]
    },
    "specific-prelim-questions": {
      "type": "questionnaire",
      "response": [
        {
          "id": "have-student-loans",
          "prompt": "Do you currently have student loans?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Unsure"
          ]
        },
        {
          "id": "total-student-loan-debt",
          "prompt": "By the end of your education, how much student loan debt do you expect to have?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Less than $10,000",
            "$10,000 - $25,000",
            "$25,000 - $50,000",
            "$50,000 - $75,000",
            "$75,000 - $100,000",
            "More than $100,000",
            "Unsure"
          ]
        },
        {
          "id": "parental-involvement",
          "prompt": "Do your parents manage your student loans?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Unsure"
          ]
        },
        {
          "id": "loan-payback",
          "prompt": "Do you expect to payback your student loans individually or with help?",
          "required": true,
          "location": "aboveStimulus",
          "type": "radio",
          "options": [
            "Individually",
            "With help",
            "Not at all",
            "Unsure"
          ]
        }
      ]
    },
    "barChart_q1": {
      "baseComponent": "stackedBarChart",
      "instruction": "Review the bar chart of student loan balance and decide to pay the minimum payment or more each year.",
      "nextButtonLocation": "sidebar",
      "nextButtonText": "."
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "consent",
      "general-prelim-questions",
      "specific-prelim-questions",
      {
        "order": "latinSquare",
        "components": [
          "barChart_q1"
        ]
      }
    ]
  }
}