{
    "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "BEDVis MQP Text Version",
        "version": "pilot",
        "authors": [
            "BEDVis"
        ],
        "date": "2024-10-11",
        "description": "A simple questionnaire study",
        "organizations": [
            "WPI"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "basic-questionnaire-study/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true
    },
    "baseComponents": {
        "simulation": {
            "type": "website",
            "response": [
                {
                    "id": "answer-array",
                    "prompt": "Here is the list of the choices you made during this simulation:",
                    "required": true,
                    "location": "belowStimulus",
                    "type": "iframe",
                    "hidden": true
                }
            ],
            "path": "mqp-text-study/assets/text.html",
            "instructionLocation": "aboveStimulus"
        
        }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "mqp-text-study/assets/introduction.md",
            "response": []
        },
        "text-simulation":{
            "baseComponent": "simulation",
            "description": "Student Loan Repayment Simulation",
            "instruction": "For each year, select which payment you would like to make each month within that year.",
            "instructionLocation": "sidebar",
            "parameters": {
                "startingBalance": 30000,
                "paymentOptions": [341, 441]
            }
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "text-simulation"
        ]
    }
}